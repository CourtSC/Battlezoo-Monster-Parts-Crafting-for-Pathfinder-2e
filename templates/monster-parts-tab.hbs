<section class='tab monster-parts' data-tab='monster-parts'>
	<div class='refinment'>
		<fieldset>
			<legend class='refinement-title'>Refinement</legend>
			<div class='refinement-data'>
				<div class='form-group'>
					<b>Current Value:</b>
					<p
						class='refinement-value'
						id='refinement-value'
					>{{itemSheet.object.system.price.value.gp}} gp</p>
				</div>
			</div>
			<div class='refinement-fieldset-controls flexrow'>
				<div class='investment-value-controls flexrow'>
					<label class='gold-value-label' for='gold-value-input'>Add Parts:</label>
					<input
						class='gold-value-input'
						type='number'
						name='gold-value-input'
						id='gold-value-input'
						data-tooltip='Enter value to invest'
						value=''
						placeholder='0 gp'
						min='0'
						step='1'
						data-actor-id='{{actorID}}'
						data-imbuement-id='{{id}}'
						data-item-id='{{itemID}}'
					/>
					<button
						class='add-gold-button'
						data-action='refine-add-gold'
						data-tooltip='Add Value'
						data-actor-id='{{actorID}}'
						data-imbuement-id='{{id}}'
						data-item-id='{{itemID}}'
					><i class='fa-solid fa-plus'></i></button>
					<button
						class='subtract-gold-button'
						data-action='refine-subtract-gold'
						data-tooltip='Subtract Value'
						data-actor-id='{{actorID}}'
						data-imbuement-id='{{id}}'
						data-item-id='{{itemID}}'
					><i class='fa-solid fa-minus'></i></button>
				</div>
			</div>
		</fieldset>
	</div>
	<div class='imbuements'>
		<div class='imbuement-form-group'>
			{{#each imbuements}}
				<fieldset>
					<legend class='imbuement-title'>{{name}}</legend>
					<div class='imbuement-data'>
						<div class='form-group'>
							<b>Current Value:</b>
							<p class='imbuement-value' id='imbuement-value'>{{imbuedValue}}
								gp</p>
						</div>
					</div>
					<div class='imbuement-fieldset-controls flexrow'>
						<div class='investment-value-controls flexrow'>
							<label class='gold-value-label' for='gold-value-input'>Add Parts:</label>
							<input
								class='gold-value-input'
								type='number'
								name='gold-value-input'
								id='gold-value-input'
								data-tooltip='Enter value to invest'
								value=''
								placeholder='0 gp'
								min='0'
								step='1'
								data-actor-id='{{actorID}}'
								data-imbuement-id='{{id}}'
								data-item-id='{{itemID}}'
							/>
							<button
								class='add-gold-button'
								data-action='imbue-add-gold'
								data-tooltip='Add Value'
								data-actor-id='{{actorID}}'
								data-imbuement-id='{{id}}'
								data-item-id='{{itemID}}'
							><i class='fa-solid fa-plus'></i></button>
							<button
								class='subtract-gold-button'
								data-action='imbue-subtract-gold'
								data-tooltip='Subtract Value'
								data-actor-id='{{actorID}}'
								data-imbuement-id='{{id}}'
								data-item-id='{{itemID}}'
							><i class='fa-solid fa-minus'></i></button>
						</div>
						<div class='edit-controls'>
							<a
								class='configure-imbuement'
								data-tooltip='Configure Imbuement'
								data-actor-id='{{actorID}}'
								data-imbuement-id='{{id}}'
							>
								<i class='fas fa-edit'> </i>
							</a>
						</div>
					</div>
				</fieldset>
			{{/each}}
		</div>
	</div>
</section>